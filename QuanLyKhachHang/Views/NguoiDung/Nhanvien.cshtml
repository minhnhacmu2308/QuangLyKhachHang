
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="container-fluid px-4">
        <h4 class="mt-1">Danh sách nhân viên</h4>

        <div class="card mb-4">
            <div class="card-header">
                @if (ViewBag.Msg != null)
                {
                    if (ViewBag.Msg == "1")
                    {
                        <div class="alert alert-success">
                            <strong>Thành công</strong>
                        </div>
                    }
                    else if (ViewBag.Msg == "2")
                    {
                        <div class="alert alert-danger">
                            <strong>Email đã tồn tại</strong>
                        </div>
                    }

                }
                <button type="button" class="btn btn-success" data-bs-toggle="modal"
                        data-bs-target="#exampleModalAdd">
                    Thêm mới
                </button>
            </div>

            <div class="card-body">
                <table id="datatablesSimple">
                    <thead style="color:#0d6efd ">
                        <tr>
                            <th>STT</th>
                            <th>Họ và tên</th>
                            <th>Địa chỉ</th>
                            <th>Số điện thoại</th>
                            <th>Giới tính</th>
                            <th>Email</th>
                            <th>Nghê nghiệp</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                        </tr>
                    </tfoot>
                    <tbody>
                        @{ var stt = 1;}
                        @foreach (var item in ViewBag.List)
                        {
                            <tr>
                                <td style="width:10px">@stt</td>
                                <td>
                                    @item.hoTen
                                </td>
                                <td>@item.diaChi</td>
                                <td>@item.soDienThoai</td>
                                <td>@item.gioiTinh</td>
                                <td>
                                    @item.email
                                </td>
                                <td>
                                    @item.ngheNghiep
                                </td>
                            </tr>
                            stt++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
<div class="modal fade" id="exampleModalAdd" tabindex="-1"
     aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thêm mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="POST" action="/NguoiDung/AddNV" class="register-form" id="register-form">
                    <div class="row">
                        <div class="col-6">
                            <div class="mb-3">
                                <label for="category-film"
                                       class="col-form-label">Họ Và Tên:</label>
                                <input type="text" class="form-control" id="category-film" required name="hoTen">
                            </div>
                            <div class="mb-3">
                                <label for="category-film"
                                       class="col-form-label">Nghề nghiệp:</label>
                                <input type="text" class="form-control" id="category-film" required name="ngheNghiep">
                            </div>
                            <div class="mb-3">
                                <label for="category-film"
                                       class="col-form-label">Email:</label>
                                <input type="text" class="form-control" id="category-film" required name="email">
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="mb-3">
                                <label for="category-film"
                                       class="col-form-label">Số điện thoại:</label>
                                <input type="text" class="form-control" id="category-film" required name="soDienThoai">
                            </div>
                            <div class="mb-3">
                                <label for="category-film"
                                       class="col-form-label">Địa chỉ:</label>
                                <input type="text" class="form-control" id="category-film" required name="diaChi">
                            </div>
                            <div class="mb-3">
                                <label for="category-film"
                                       class="col-form-label">Chọn giới tính:</label>
                                <select class="form-select" name="gioiTinh" required aria-label="Default select example">
                                    <option selected>Chọn giới tính </option>
                                    <option value="Nữ">Nữ</option>
                                    <option value="Nam">Nam</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary"
                                data-bs-dismiss="modal">
                            Đóng
                        </button>
                        <button type="submit" class="btn btn-primary">Thêm </button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>


